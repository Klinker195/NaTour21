<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verificationConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.VerificationActivity">

    <ImageView
        android:id="@+id/verificationBackgroundImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="65dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/natour_authentication_backgroundgradient"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verificationConstraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:isScrollContainer="true"
        app:layout_constraintBottom_toBottomOf="@+id/verificationBackgroundImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/verificationBackgroundImageView">

        <TextView
            android:id="@+id/verificationErrorTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/redhattext_italic"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:singleLine="true"
            android:text="Error: something went wrong"
            android:textAlignment="center"
            android:textColor="@color/error_color"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/verificationNextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verificationEditTextVerificationCode"
            app:layout_constraintVertical_bias="0.25"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/verificationFormTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="76dp"
            android:fontFamily="@font/redhattext_medium"
            android:singleLine="false"
            android:text="Verification"
            android:textAlignment="textEnd"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/verificationVerificationCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Verification code"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/verificationCheckYourEmailTextView"
            app:layout_constraintStart_toStartOf="@+id/verificationCheckYourEmailTextView" />

        <EditText
            android:id="@+id/verificationEditTextVerificationCode"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/natour_components_edittext_background"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/redhattext_regular"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/edit_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verificationResendCodeButton"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/verificationNextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="72dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:elevation="20dp"
            android:fontFamily="@font/redhattext_bold"
            android:hapticFeedbackEnabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="next"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:cornerRadius="40.0dp"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verificationEditTextVerificationCode"
            app:rippleColor="@color/green_signin_icon"
            app:strokeColor="#DFDFDF"
            app:strokeWidth="0.5dp" />

        <Button
            android:id="@+id/verificationResendCodeButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:elevation="20dp"
            android:fontFamily="@font/redhattext_bold"
            android:hapticFeedbackEnabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="resend code"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="40.0dp"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verificationFormTextView"
            app:rippleColor="@color/green_signin_icon"
            app:strokeColor="#DFDFDF"
            app:strokeWidth="0.5dp" />

        <TextView
            android:id="@+id/verificationCheckYourEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_medium_italic"
            android:shadowColor="@color/black_60alpha"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="Check your email inbox"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/verificationEditTextVerificationCode"
            app:layout_constraintStart_toStartOf="@+id/verificationEditTextVerificationCode" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>