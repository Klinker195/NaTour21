<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/popupAddToFavConfirmationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/redhattext_regular"
        android:text="Where do you want to save the post?"
        android:textAlignment="center"
        android:textColor="@color/lightgrey_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/popupAddToFavFavButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:drawableLeft="@drawable/natour_fav_collection_button"
        android:elevation="20dp"
        android:fontFamily="@font/redhattext_medium"
        android:hapticFeedbackEnabled="true"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Favorites"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="40.0dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popupAddToFavConfirmationTextView"
        app:rippleColor="@color/green_signin_icon"
        app:strokeColor="#DFDFDF"
        app:strokeWidth="0.5dp" />

    <Button
        android:id="@+id/popupAddToVisitFavButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:drawableLeft="@drawable/natour_visit_collection_button"
        android:elevation="20dp"
        android:fontFamily="@font/redhattext_medium"
        android:hapticFeedbackEnabled="true"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="To visit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="40.0dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/popupAddToFavFavButton"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/popupAddToFavFavButton"
        app:layout_constraintTop_toBottomOf="@+id/popupAddToFavFavButton"
        app:rippleColor="@color/green_signin_icon"
        app:strokeColor="#DFDFDF"
        app:strokeWidth="0.5dp" />

    <ImageView
        android:id="@+id/popupAddToFavCancelImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/popupAddToVisitFavButton"
        app:layout_constraintStart_toStartOf="@+id/popupAddToVisitFavButton"
        app:layout_constraintTop_toBottomOf="@+id/popupAddToVisitFavButton"
        app:srcCompat="@drawable/natour_cancel_button" />

</androidx.constraintlayout.widget.ConstraintLayout>