<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/popupConfirmConfirmationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/redhattext_regular"
        android:text="Are you sure you want to delete the post?"
        android:textAlignment="center"
        android:textColor="@color/lightgrey_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/popupConfirmImageViewYesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/popupConfirmConfirmationTextView"
        app:layout_constraintTop_toBottomOf="@+id/popupConfirmConfirmationTextView"
        app:srcCompat="@drawable/natour_yes_button" />

    <ImageView
        android:id="@+id/popupConfirmImageViewNoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/popupConfirmImageViewYesButton"
        app:layout_constraintEnd_toEndOf="@+id/popupConfirmConfirmationTextView"
        app:layout_constraintTop_toTopOf="@+id/popupConfirmImageViewYesButton"
        app:srcCompat="@drawable/natour_no_button" />
</androidx.constraintlayout.widget.ConstraintLayout>