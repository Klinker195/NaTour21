<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.PostDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/postDetailsTopConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/postDetailsNatourTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/redhattext_medium"
            android:text="NaTour\u00B2\u00B9"
            android:textSize="30sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/postDetailsBackButtonImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/natour_arrow_left" />

        <ImageView
            android:id="@+id/postDetailsReportButtonImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/natour_report_icon"
            app:tint="@color/bluegreen_nav_icon" />

        <ImageView
            android:id="@+id/postDetailsEditButtonImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/postDetailsReportButtonImageView"
            app:layout_constraintEnd_toStartOf="@+id/postDetailsReportButtonImageView"
            app:layout_constraintTop_toTopOf="@+id/postDetailsReportButtonImageView"
            app:srcCompat="@drawable/natour_post_edit_icon"
            app:tint="@color/bluegreen_nav_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/postDetailsPicImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="480dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postDetailsTopConstraintLayout"
        app:srcCompat="@color/bluegreen_nav_icon"
        tools:srcCompat="@color/bluegreen_nav_icon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/postDetailsMidConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postDetailsTopConstraintLayout">

        <ScrollView
            android:id="@+id/postDetailsScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/postDetailsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/postDetailsTopImageConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="275dp">

                    <Button
                        android:id="@+id/postDetailsRateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@color/white"
                        android:backgroundTintMode="add"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:drawableRight="@drawable/natour_rate_leaf"
                        android:elevation="6dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:focusedByDefault="false"
                        android:fontFamily="@font/redhattext_semi_bold"
                        android:hapticFeedbackEnabled="true"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:linksClickable="false"
                        android:longClickable="false"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:selectAllOnFocus="false"
                        android:stateListAnimator="@null"
                        android:text="5.0"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="15sp"
                        app:cornerRadius="40dp"
                        app:layout_constraintBottom_toTopOf="@+id/postDetailsDividerImageView"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/postDetailsAccessibilityBackgroundButton"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="16dp"
                        android:background="#FFFFFF"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:longClickable="false"
                        android:stateListAnimator="@null"
                        app:backgroundTint="#FFFFFF"
                        app:layout_constraintBottom_toTopOf="@+id/postDetailsAddFavButtonBackgroundImageView"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsAddFavButtonBackgroundImageView"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsAddFavButtonBackgroundImageView" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/postDetailsReportBackgroundButton"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="4dp"
                        android:background="#FFFFFF"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:longClickable="false"
                        android:stateListAnimator="@null"
                        app:backgroundTint="#FFFFFF"
                        app:layout_constraintBottom_toTopOf="@+id/postDetailsAccessibilityBackgroundButton"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsAccessibilityBackgroundButton"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsAccessibilityBackgroundButton" />

                    <ImageView
                        android:id="@+id/postDetailsAccessibilityImageView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTintMode="add"
                        android:elevation="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/postDetailsAccessibilityBackgroundButton"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsAccessibilityBackgroundButton"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsAccessibilityBackgroundButton"
                        app:layout_constraintTop_toTopOf="@+id/postDetailsAccessibilityBackgroundButton"
                        app:srcCompat="@drawable/natour_handicap_icon"
                        app:tint="@color/bluegreen_nav_icon"
                        tools:srcCompat="@drawable/natour_handicap_icon" />

                    <ImageView
                        android:id="@+id/postDetailsReportImageView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTintMode="add"
                        android:elevation="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/postDetailsReportBackgroundButton"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsReportBackgroundButton"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsReportBackgroundButton"
                        app:layout_constraintTop_toTopOf="@+id/postDetailsReportBackgroundButton"
                        app:srcCompat="@drawable/natour_report_icon"
                        app:tint="@color/bluegreen_nav_icon"
                        tools:srcCompat="@drawable/natour_report_icon" />

                    <TextView
                        android:id="@+id/postDetailsTitleTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="4dp"
                        android:shadowColor="@color/black_60alpha"
                        android:shadowDy="2"
                        android:shadowRadius="10"
                        android:text="Post title"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/postDetailsDividerImageView"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:elevation="30dp"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/natour_post_details_divider" />

                    <ImageView
                        android:id="@+id/postDetailsPicShadowImageView"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:elevation="1dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="@+id/postDetailsDividerImageView"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsDividerImageView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/natour_stronger_black_gradient_reverse"
                        tools:srcCompat="@drawable/natour_stronger_black_gradient_reverse" />

                    <ImageView
                        android:id="@+id/postDetailsPicShadowImageView2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:elevation="1dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsDividerImageView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/natour_black_gradient"
                        tools:srcCompat="@drawable/natour_black_gradient" />

                    <ImageView
                        android:id="@+id/postDetailsAddFavButtonBackgroundImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/natour_white_circle"
                        app:tint="#FFFFFF" />

                    <ImageView
                        android:id="@+id/postDetailsAddToFavImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="30dp"
                        app:layout_constraintBottom_toBottomOf="@+id/postDetailsAddFavButtonBackgroundImageView"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsAddFavButtonBackgroundImageView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsAddFavButtonBackgroundImageView"
                        app:layout_constraintTop_toTopOf="@+id/postDetailsAddFavButtonBackgroundImageView"
                        app:srcCompat="@drawable/natour_add_fav_clear_icon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/postDetailsInfoConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:paddingBottom="40dp">

                    <ImageView
                        android:id="@+id/postDetailsUserFollowImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/postDetailsUserNameSurnameTextView"
                        app:layout_constraintStart_toEndOf="@+id/postDetailsUserNameSurnameTextView"
                        app:layout_constraintTop_toTopOf="@+id/postDetailsUserNicknameTextView"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/natour_follow_button"
                        tools:srcCompat="@drawable/natour_follow_button" />

                    <TextView
                        android:id="@+id/postDetailsAuthorTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:text="Author"
                        android:textColor="@color/edit_text_color"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/postDetailsRouteTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:text="Route"
                        android:textColor="@color/edit_text_color"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsDividerLineImageView" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/postDetailsUserPropicImageView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="0dp"
                        android:src="@drawable/ic_launcher_background"
                        app:layout_constraintBottom_toBottomOf="@+id/postDetailsUserPropicOutlineImageView"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsUserPropicOutlineImageView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsUserPropicOutlineImageView"
                        app:layout_constraintTop_toTopOf="@+id/postDetailsUserPropicOutlineImageView"
                        tools:srcCompat="@drawable/ic_launcher_background" />

                    <ImageView
                        android:id="@+id/postDetailsUserPropicOutlineImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:elevation="0dp"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsAuthorTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsAuthorTextView"
                        app:srcCompat="@drawable/natour_user_propic_post_card_ellipse"
                        tools:srcCompat="@drawable/natour_user_propic_post_card_ellipse" />

                    <TextView
                        android:id="@+id/postDetailsUserNicknameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/redhattext_medium"
                        android:text="Nickname"
                        android:textColor="@color/bluegreen_nav_icon"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/postDetailsUserPropicOutlineImageView"
                        app:layout_constraintTop_toTopOf="@+id/postDetailsUserPropicOutlineImageView" />

                    <TextView
                        android:id="@+id/postDetailsUserNameSurnameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhattext_italic"
                        android:text="Name Surname"
                        android:textColor="@color/bluegreen_nav_icon"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/postDetailsUserPropicOutlineImageView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsUserNicknameTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsUserNicknameTextView"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/postDetailsDescriptionTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/redhattext_medium"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque ac hendrerit risus, ac aliquet justo. Sed ligula ante, feugiat in arcu nec, tempor ullamcorper tortor. Cras mollis, mi sit amet accumsan porta, velit est aliquam sapien, laoreet vestibulum orci tortor eget turpis. Duis condimentum, est eu lacinia dignissim, ex orci pulvinar nulla, et iaculis urna libero sed leo. Mauris vehicula sapien et lobortis feugiat. Nam tellus nibh, vestibulum ut sodales at, rutrum malesuada metus. Ut enim orci, ultrices sed erat sed, dictum convallis velit. Vivamus interdum malesuada orci, sed porttitor magna ornare vitae. Integer non mi ante."
                        android:textAlignment="textStart"
                        android:textColor="@color/bluegreen_nav_icon"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsDescriptionHeaderTextView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsDescriptionHeaderTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsDescriptionHeaderTextView" />

                    <TextView
                        android:id="@+id/postDetailsDurationTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/redhattext_medium"
                        android:text="40 minutes"
                        android:textAlignment="textStart"
                        android:textColor="@color/bluegreen_nav_icon"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsDurationHeaderTextView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsDurationHeaderTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsDurationHeaderTextView" />

                    <TextView
                        android:id="@+id/postDetailsAccessibilityTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/redhattext_medium"
                        android:text="Accessibility"
                        android:textAlignment="textStart"
                        android:textColor="@color/bluegreen_nav_icon"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsOtherInfoHeaderTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsOtherInfoHeaderTextView" />

                    <ImageView
                        android:id="@+id/postDetailsDividerLineImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.494"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsUserPropicOutlineImageView"
                        app:srcCompat="@drawable/natour_post_details_divider_line" />

                    <ImageView
                        android:id="@+id/postDetailsDividerLineImageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.494"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsAccessibilityTextView"
                        app:srcCompat="@drawable/natour_post_details_divider_line" />

                    <TextView
                        android:id="@+id/postDetailsCreationDateTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:text="Date of creation"
                        android:textColor="@color/edit_text_color"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsDividerLineImageView2" />

                    <TextView
                        android:id="@+id/postDetailsCreationDateTimestampTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/redhattext_medium"
                        android:text="00:00:00 DATE"
                        android:textAlignment="textStart"
                        android:textColor="@color/bluegreen_nav_icon"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsDurationHeaderTextView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsDurationHeaderTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsCreationDateTextView" />

                    <TextView
                        android:id="@+id/postDetailsEditDateTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:text="Last edit"
                        android:textColor="@color/edit_text_color"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsCreationDateTimestampTextView" />

                    <TextView
                        android:id="@+id/postDetailsEditDateTimestampTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/redhattext_medium"
                        android:text="00:00:00 DATE"
                        android:textAlignment="textStart"
                        android:textColor="@color/bluegreen_nav_icon"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsDurationHeaderTextView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsDurationHeaderTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsEditDateTextView" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/postDetailsRouteCardView"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="30dp"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsRouteTextView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsRouteTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsRouteTextView">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/postDetailsRouteMapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/postDetailsDescriptionHeaderTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:text="Description"
                        android:textColor="@color/edit_text_color"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsRouteCardView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsRouteCardView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsRouteCardView" />

                    <TextView
                        android:id="@+id/postDetailsDifficultyHeaderTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:text="Difficulty"
                        android:textColor="@color/edit_text_color"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsRouteCardView"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsRouteCardView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsDescriptionTextView" />

                    <TextView
                        android:id="@+id/postDetailsDurationHeaderTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:text="Duration"
                        android:textColor="@color/edit_text_color"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="@+id/postDetailsDifficultyHeaderTextView"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/postDetailsDifficultyHeaderTextView"
                        app:layout_constraintTop_toBottomOf="@+id/postDetailsDifficultyLinearLayout" />

                    <TextView
                        android:id="@+id/postDetailsOtherInfoHeaderTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/redhattext_bold"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:text="Other info"
                        android:textColor="@color/edit_text_color"
                        android:textSize="24sp"
