<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authenticationConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.AuthenticationActivity"
    android:fitsSystemWindows="false" >

    <ImageView
        android:id="@+id/authenticationBackgroundImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="65dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/natour_authentication_backgroundgradient"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/authenticationConstraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/authenticationBackgroundImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/authenticationSignInTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/redhattext_medium"
            android:text="Sign-in"
            android:textAlignment="textEnd"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="@+id/authenticationEditTextEmailAddress"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/authenticationEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/authenticationEditTextEmailAddress"
            app:layout_constraintStart_toStartOf="@+id/authenticationEditTextEmailAddress" />

        <TextView
            android:id="@+id/authenticationPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/authenticationEditTextPassword"
            app:layout_constraintStart_toStartOf="@+id/authenticationEditTextPassword" />

        <TextView
            android:id="@+id/authenticationForgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Forgot your password?"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/authenticationEditTextPassword"
            app:layout_constraintTop_toBottomOf="@+id/authenticationEditTextPassword" />

        <TextView
            android:id="@+id/authenticationForgotPasswordClickableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Tap here."
            android:textColor="#8E8E8E"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/authenticationForgotPasswordTextView"
            app:layout_constraintTop_toBottomOf="@+id/authenticationEditTextPassword" />

        <EditText
            android:id="@+id/authenticationEditTextPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/natour_components_edittext_background"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/redhattext_regular"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/edit_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authenticationEditTextEmailAddress"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/authenticationEditTextEmailAddress"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/natour_components_edittext_background"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/redhattext_regular"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/edit_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authenticationSignInTextView"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/authenticationSignInButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:elevation="20dp"
            android:fontFamily="@font/redhattext_bold"
            android:hapticFeedbackEnabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="sign-in"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:cornerRadius="40.0dp"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authenticationEditTextPassword"
            app:rippleColor="@color/green_signin_icon"
            app:strokeColor="#DFDFDF"
            app:strokeWidth="0.5dp" />

        <TextView
            android:id="@+id/authenticationOrTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhattext_medium"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="1"
            android:shadowRadius="8"
            android:text="or"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/authenticationGoogleSignInButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authenticationSignInButton" />

        <Button
            android:id="@+id/authenticationGoogleSignInButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:drawableLeft="@drawable/natour_mainscreen_google_icon"
            android:elevation="20dp"
            android:fontFamily="@font/redhattext_bold"
            android:hapticFeedbackEnabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="15dp"
            android:text="sign-in with google"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="40.0dp"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authenticationSignInButton"
            app:rippleColor="@color/green_signin_icon"
            app:strokeColor="#DFDFDF"
            app:strokeWidth="0.5dp" />

        <TextView
            android:id="@+id/authenticationErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhattext_italic"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:singleLine="true"
            android:text="Error: something went wrong"
            android:textAlignment="center"
            android:textColor="@color/error_color"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/authenticationSignInButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authenticationForgotPasswordTextView"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/authenticationNoAccountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:fontFamily="@font/redhattext_medium"
            android:shadowColor="@color/black_60alpha"
            android:shadowDy="1"
            android:shadowRadius="10"
            android:text="Don't have an account?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/authenticationRegisterButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/authenticationRegisterButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:elevation="20dp"
            android:fontFamily="@font/redhattext_bold"
            android:hapticFeedbackEnabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="register"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="40.0dp"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@color/green_signin_icon"
            app:strokeColor="#DFDFDF"
            app:strokeWidth="0.5dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>