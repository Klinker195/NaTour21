<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registrationFormConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.RegistrationFormActivity">

    <ImageView
        android:id="@+id/registrationFormBackgroundImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="65dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/natour_authentication_backgroundgradient"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registrationFormConstraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/registrationFormErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhattext_italic"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:singleLine="true"
            android:text="Error: something went wrong"
            android:textAlignment="center"
            android:textColor="@color/error_color"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/registrationFormDoneButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registrationFormWeightSpinner"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/registrationFormResetPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/redhattext_medium"
            android:singleLine="false"
            android:text="Registration\nForm"
            android:textAlignment="textEnd"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="@+id/registrationFormEditTextPassword"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/registrationFormPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/registrationFormEditTextPassword"
            app:layout_constraintStart_toStartOf="@+id/registrationFormEditTextPassword" />

        <TextView
            android:id="@+id/registrationFormPasswordTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Surname"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/registrationFormEditTextPassword2"
            app:layout_constraintStart_toStartOf="@+id/registrationFormEditTextPassword2" />

        <EditText
            android:id="@+id/registrationFormEditTextPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/natour_components_edittext_background"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/redhattext_regular"
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/edit_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registrationFormResetPasswordTextView"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/registrationFormEditTextPassword2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/natour_components_edittext_background"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/redhattext_regular"
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/edit_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registrationFormEditTextPassword"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/registrationFormDoneButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:elevation="20dp"
            android:fontFamily="@font/redhattext_bold"
            android:hapticFeedbackEnabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="done"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:cornerRadius="40.0dp"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@color/green_signin_icon"
            app:strokeColor="#DFDFDF"
            app:strokeWidth="0.5dp" />

        <TextView
            android:id="@+id/registrationFormBirthdateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Birthdate"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/registrationFormDatePickerButton"
            app:layout_constraintStart_toStartOf="@+id/registrationFormDatePickerButton" />

        <Button
            android:id="@+id/registrationFormDatePickerButton"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:elevation="20dp"
            android:fontFamily="@font/redhattext_regular"
            android:hapticFeedbackEnabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="dd/mm\nyyyy"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/edit_text_color"
            android:textSize="14dp"
            app:cornerRadius="40.0dp"
            app:icon="@drawable/natour_calendar_icon"
            app:iconGravity="textEnd"
            app:iconSize="20dp"
            app:iconTintMode="multiply"
            app:layout_constraintStart_toStartOf="@+id/registrationFormEditTextPassword2"
            app:layout_constraintTop_toBottomOf="@+id/registrationFormEditTextPassword2"
            app:rippleColor="@color/green_signin_icon"
            app:strokeColor="#DFDFDF"
            app:strokeWidth="0.5dp" />

        <TextView
            android:id="@+id/registrationFormSexTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Sex"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/registrationFormSexSpinner"
            app:layout_constraintStart_toStartOf="@+id/registrationFormSexSpinner" />

        <ImageView
            android:id="@+id/registrationFormSexImageView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:elevation="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/registrationFormSexSpinner"
            app:layout_constraintEnd_toEndOf="@+id/registrationFormSexSpinner"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="@+id/registrationFormSexSpinner"
            app:layout_constraintTop_toTopOf="@+id/registrationFormSexSpinner"
            app:srcCompat="@drawable/natour_arrow_down_icon" />

        <Spinner
            android:id="@+id/registrationFormSexSpinner"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/natour_components_edittext_background"
            android:dropDownWidth="match_parent"
            android:elevation="20dp"
            android:popupBackground="@drawable/spinnerbg"
            app:layout_constraintStart_toEndOf="@+id/registrationFormDatePickerButton"
            app:layout_constraintTop_toTopOf="@+id/registrationFormDatePickerButton" />

        <TextView
            android:id="@+id/registrationFormWeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Weight"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/registrationFormWeightSpinner"
            app:layout_constraintStart_toStartOf="@+id/registrationFormWeightSpinner" />

        <ImageView
            android:id="@+id/registrationFormWeightImageView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:elevation="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/registrationFormWeightSpinner"
            app:layout_constraintEnd_toEndOf="@+id/registrationFormWeightSpinner"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintStart_toStartOf="@+id/registrationFormWeightSpinner"
            app:layout_constraintTop_toTopOf="@+id/registrationFormWeightSpinner"
            app:layout_constraintVertical_bias="0.545"
            app:srcCompat="@drawable/natour_arrow_down_icon" />

        <Spinner
            android:id="@+id/registrationFormWeightSpinner"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/natour_components_edittext_background"
            android:dropDownWidth="match_parent"
            android:elevation="20dp"
            android:popupBackground="@drawable/spinnerbg"
            app:layout_constraintStart_toStartOf="@+id/registrationFormDatePickerButton"
            app:layout_constraintTop_toBottomOf="@+id/registrationFormDatePickerButton" />

        <TextView
            android:id="@+id/registrationFormHeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Height"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/registrationFormHeightSpinner"
            app:layout_constraintStart_toStartOf="@+id/registrationFormHeightSpinner" />

        <ImageView
            android:id="@+id/registrationFormHeightImageView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:elevation="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/registrationFormHeightSpinner"
            app:layout_constraintEnd_toEndOf="@+id/registrationFormHeightSpinner"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="@+id/registrationFormHeightSpinner"
            app:layout_constraintTop_toTopOf="@+id/registrationFormHeightSpinner"
            app:layout_constraintVertical_bias="0.59"
            app:srcCompat="@drawable/natour_arrow_down_icon" />

        <Spinner
            android:id="@+id/registrationFormHeightSpinner"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/natour_components_edittext_background"
            android:dropDownWidth="match_parent"
            android:elevation="20dp"
            android:popupBackground="@drawable/spinnerbg"
            app:layout_constraintStart_toEndOf="@+id/registrationFormWeightSpinner"
            app:layout_constraintTop_toTopOf="@+id/registrationFormWeightSpinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>