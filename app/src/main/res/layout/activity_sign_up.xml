<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUpFirstStepConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SignUpActivity">

    <ImageView
        android:id="@+id/signUpFirstStepBackgroundImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="65dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/natour_authentication_backgroundgradient"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signUpFirstStepConstraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:isScrollContainer="true"
        app:layout_constraintBottom_toBottomOf="@+id/signUpFirstStepBackgroundImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signUpFirstStepBackgroundImageView">

        <EditText
            android:id="@+id/signUpEditTextEmailAddress"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/natour_components_edittext_background"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/redhattext_regular"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/edit_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUpRegistrationFormTextView"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/signUpFirstStepEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/signUpEditTextEmailAddress"
            app:layout_constraintStart_toStartOf="@+id/signUpEditTextEmailAddress" />

        <TextView
            android:id="@+id/signUpErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/redhattext_italic"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:singleLine="true"
            android:text="Error: something went wrong"
            android:textAlignment="center"
            android:textColor="@color/error_color"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUpEditTextPassword2"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/signUpRegistrationFormTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/redhattext_medium"
            android:singleLine="false"
            android:text="Registration\n Form"
            android:textAlignment="textEnd"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="@+id/signUpEditTextEmailAddress"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signUpFirstStepPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/signUpFirstStepCheckYourEmailTextView2"
            app:layout_constraintStart_toStartOf="@+id/signUpFirstStepCheckYourEmailTextView2" />

        <TextView
            android:id="@+id/signUpFirstStepPasswordTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_semi_bold"
            android:shadowColor="@color/black_30alpha"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Confirm password"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/signUpEditTextPassword2"
            app:layout_constraintStart_toStartOf="@+id/signUpEditTextPassword2" />

        <EditText
            android:id="@+id/signUpEditTextPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/natour_components_edittext_background"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/redhattext_regular"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/edit_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUpEditTextEmailAddress"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/signUpEditTextPassword2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/natour_components_edittext_background"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/redhattext_regular"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/edit_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUpEditTextPassword"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/signUpNextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:elevation="20dp"
            android:fontFamily="@font/redhattext_bold"
            android:hapticFeedbackEnabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="next"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:cornerRadius="40.0dp"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUpErrorTextView"
            app:rippleColor="@color/green_signin_icon"
            app:strokeColor="#DFDFDF"
            app:strokeWidth="0.5dp" />

        <TextView
            android:id="@+id/signUpFirstStepCheckYourEmailTextView2"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhattext_medium_italic"
            android:shadowColor="@color/black_60alpha"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="Password must contain at least: 8 characters, a digit, an uppercase character, a lowercase character and a symbol"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/signUpEditTextPassword"
            app:layout_constraintStart_toStartOf="@+id/signUpEditTextPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>